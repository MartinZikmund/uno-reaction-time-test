<Page
    x:Class="ReactionTimeTest.Shared.ResultsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ReactionTimeTest.Shared"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid Background="Black" Tapped="Grid_Tapped">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Your average reaction time is" />
            <TextBlock HorizontalAlignment="Center" Style="{ThemeResource HeaderTextBlockStyle}">
                <Run x:Name="AverageTimeRun" Text="123" />
                <Run Text="ms" />
            </TextBlock>
            <TextBlock HorizontalAlignment="Center" Text="Tap to try again" />
        </StackPanel>
    </Grid>
</Page>
